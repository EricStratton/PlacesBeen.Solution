@{
  Layout = "_layout";
}

<form action="/places" method="post">
  <label for="city">City: </label>
  <input id="city" name="city" type="text" value="Berlin">
  <label for="country">Country: </label>
  <input id="country" name="country" type="text" value="Germany">
  <label for="when">When: </label>
  <input id="when" name="when" type="text" value="May of 2021">
  <label for="howLong">How Long: </label>
  <input id="howLong" name="howLong" type="text" value="3 months">
  <label for="who">Who: </label>
  <input id="who" name="who" type="text" value="Zach, Roger and Jerry">
  <label for="journal">Journal: </label>
  <input id="journal" name="journal" type="text" value="We landed at the airport and went to a cafe">
  <button type="submit" class="btn btn-success">Add your trip!</button>
</form>